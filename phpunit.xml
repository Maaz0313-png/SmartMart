<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         executionOrder="random"
         resolveDependencies="true"
         stopOnFailure="false"
         cacheDirectory="storage/testing/cache"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
        <testsuite name="API">
            <directory>tests/Feature/Api</directory>
        </testsuite>
        <testsuite name="Admin">
            <directory>tests/Feature/Admin</directory>
        </testsuite>
        <testsuite name="Auth">
            <directory>tests/Feature/Auth</directory>
        </testsuite>
    </testsuites>
    
    <source>
        <include>
            <directory>app</directory>
        </include>
        <exclude>
            <directory>app/Console/Commands</directory>
            <file>app/Http/Kernel.php</file>
            <file>app/Providers/RouteServiceProvider.php</file>
        </exclude>
    </source>
    
    <coverage>
        <report>
            <html outputDirectory="storage/testing/coverage/html"/>
            <clover outputFile="storage/testing/coverage/clover.xml"/>
            <text outputFile="storage/testing/coverage/text.txt"/>
        </report>
    </coverage>
    
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="base64:7hX8VzsOp20gV/tNWqPQdQvX2Mmt2EwlTstWBp3T6Go="/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_HOST" value="127.0.0.1"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="smartmart_testing"/>
        <env name="DB_USERNAME" value="root"/>
        <env name="DB_PASSWORD" value="root"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="REDIS_CLIENT" value="predis"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>
        
        <!-- Test-specific settings -->
        <env name="SANCTUM_STATEFUL_DOMAINS" value="localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1"/>
        <env name="MEILISEARCH_HOST" value="http://localhost:7700"/>
        <env name="STRIPE_SECRET" value="sk_test_fake_key"/>
        <env name="PAYPAL_CLIENT_ID" value="test_paypal_client_id"/>
        <env name="PAYPAL_CLIENT_SECRET" value="test_paypal_secret"/>
        
        <!-- GDPR and Privacy settings for testing -->
        <env name="GDPR_DATA_RETENTION_DAYS" value="30"/>
        <env name="GDPR_EXPORT_EXPIRY_DAYS" value="30"/>
        
        <!-- Notification settings for testing -->
        <env name="TWILIO_SID" value="test_sid"/>
        <env name="TWILIO_TOKEN" value="test_token"/>
        <env name="FCM_SERVER_KEY" value="test_fcm_key"/>
        
        <!-- AI and Search settings -->
        <env name="OPENAI_API_KEY" value="test_openai_key"/>
        <env name="HUGGING_FACE_API_KEY" value="test_hf_key"/>
        
        <!-- Security settings -->
        <env name="RATE_LIMIT_PER_MINUTE" value="120"/>
        <env name="API_RATE_LIMIT_PER_MINUTE" value="100"/>
        <env name="OTP_EXPIRY_MINUTES" value="5"/>
        
        <!-- File storage for testing -->
        <env name="FILESYSTEM_DISK" value="testing"/>
    </php>
    
    <groups>
        <exclude>
            <group>slow</group>
            <group>external</group>
        </exclude>
    </groups>
    
    <logging>
        <junit outputFile="storage/testing/junit.xml"/>
    </logging>
</phpunit>